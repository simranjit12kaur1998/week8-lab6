<!-- Define a function to render the feedback -->
<% function renderFeedback(feedback) { %>
    <div class="item-details">
      <article>
        <h2>Sender: <%= feedback.sender %></h2>
        <div><%= feedback.message %></div>
        <p>
          <strong>Rating</strong> <%= feedback.rating %><br />
        </p>
    
        <!-- Update button -->
        <form
          class="action-form"
          method="GET"
          action="/single-feedback/update/<%= feedback._id %>"
        >
          <button type="submit" class="update">update</button>
        </form>
    
        <!-- Delete button -->
        <form
          class="action-form"
          method="POST"
          action="/single-feedback/<%= feedback._id %>?_method=DELETE"
        >
          <button type="submit">delete</button>
        </form>
      </article>
    </div>
    <% } %>
    
